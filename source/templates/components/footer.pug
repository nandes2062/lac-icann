footer.main-footer
	.lac-container.main-center
		//- .lac-item.l-30.m-100.s-100.main-footer__item.cross-center.main-center.l-block
			//- h1.main-footer__title.t3 Estrategia LAC
			form.main-footer__content.lac-item.l-70.m-70.s-90
				.form__item
					label Seleccionar idioma
					select(@change="onChange()" v-model="lang")
						option Español (spanish)
						option English (Inglés)
		.lac-item.l-10.m-100.s-100.main-footer__item
			.main-footer__content
				.lac-item.lac-container
					h2.w5 INICIO
				ul.data-list.lac-container
					li.lac-item.lac-container.m-50
						a(href= path_page)
							span Inicio
					//- li.lac-item(v-for="item in mainmenu")
						a(v-if="item.submenu == null" :href="item.href")
							span(v-text="item.title")
						a(v-else :href="item.href" v-text="item.title + ': '")
						template(v-for="subitem in item.submenu")
							a(:href="subitem.href" v-text="' - ' + subitem.title")
		.lac-item.l-20.m-100.s-100.main-footer__item
			.main-footer__content
				.lac-item.lac-container
					h2.w5 PLAN ESTRATÉGICO
				ul.data-list.lac-container
					//- li.lac-item.m-50
					//- 	a(href= path_page)
					//- 		span Inicio
					li.lac-item.lac-container(v-for="item in mainmenu")
						a(v-if="item.submenu == null" :href="item.href")
							span(v-text="item.title")
						a(v-else :href="item.href" v-text="item.title + ': '")
						template(v-for="subitem in item.submenu")
							a(:href="subitem.href" v-text="' - ' + subitem.title")
		.lac-item.l-15.m-100.s-100.main-footer__item
			.main-footer__content
				.lac-item.lac-container
					h2.w5 CONTÁCTENOS
				ul.data-list.lac-container
					li.m-50
						a(href= path_page)
							span Contáctenos
					//- li.lac-item(v-for="item in mainmenu")
						a(v-if="item.submenu == null" :href="item.href")
