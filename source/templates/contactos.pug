extends layouts/template
append config
	-currentPage = 'Contactos'
//- block banner
	include components/slider
	include components/flux-slider.html
block main
	.lac-item.l-25
		h2.title.center Contáctenos
		form.lac-container.form(v-on:submit.prevent="submitForm")
			.lac-item.form__item
				label.form__label(for="") Nombre completo: 
				input.form__input(v-model="vue.nombre" type="text" required="")
			.lac-item.form__item
				label.form__label(for="") Teléfono: 
				input.form__input(v-model="vue.telefono" type="number")
			.lac-item.form__item
				label.form__label(for="") Celular: 
				input.form__input(v-model="vue.movil" type="number" required="")
			.lac-item.form__item
				label.form__label(for="") Dirección: 
				input.form__input(v-model="vue.direccion" type="text" required="")
			.lac-item.form__item
				label.form__label(for="") Ciudad: 
				input.form__input(v-model="vue.ciudad" type="text" required="")
			.lac-item.form__item
				label.form__label(for="") Email: 
				input.form__input(v-model="vue.email" type="email" required="")
			.lac-item.form__item
				label.form__label(for="") Mensaje: 
				textarea.form__input(v-model="vue.mensaje" name="", cols="30", rows="10" required="")
			.lac-item.form__item.main-center
				button.button(type="submit") Enviar
				button.button(type="submit" v-on:click="clearForm()") Limpiar
			.statusMessage(v-if="formSubmitted")
				h4(v-text="vue.envio")
	.lac-item.l-75
		h2.title.center Ubíquenos
		//- google-map