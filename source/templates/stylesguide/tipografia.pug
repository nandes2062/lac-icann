extends ../layouts/template-stylesguide

append config
  -currentPage = 'tipografia'
block banner
  block banner
    +banner("https://images.pexels.com/photos/265614/pexels-photo-265614.jpeg?w=1260&h=750&auto=compress&cs=tinysrgb", 'Tipografía', '', 'tertiary')

block main
  p #{siteName} utiliza dos familias tipográficas:
  ul
    li
      strong Open Sans (700)
      |  para los títulos
    li
      strong Lato (400,400i)
      |  para los contenidos

  ul.data-list
    li
      div: h1 Título 1 <span class="from-l">(36px/1.3)</span> <span class="to-l">(30px/1.3)</span>
      div: p
        code &lt;h1&gt;&lt;/h1&gt;
        code class="t1"

    li
      div: h2 Titulo 2 <span class="from-l">(30px/1.3)</span><span class="to-l">(24px/1.3)</span>
      div: p
        code &lt;h2&gt;&lt;/h2&gt;
        code class="t2"

    li
      div: h3 Título 3 <span class="from-l">(24px/1.3)</span><span class="to-l">(20px/1.3)</span>
      div: p
        code &lt;h3&gt;&lt;/h3&gt;
        code class="t3"

    li
      div: h4 Título 4 (20px/1.3)
      div: p
        code &lt;h4&gt;&lt;/h4&gt;
        code class="normal"

    li
      div: h5 Título 5 (16px/1.3)
      div: p
        code &lt;h5&gt;&lt;/h5&gt;
        code class="small"

    li
      div: h6 Título 6 (14px/1.3)
      div: p
        code &lt;h6&gt;&lt;/h6&gt;
        code class="smaller"

